<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_card"
    android:gravity="center_vertical">

    <!--App image-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ic_appicon"
        android:src="@drawable/ic_generic"
        android:layout_margin="5dp"
        android:contentDescription="App Icon"
        android:scaleType="fitCenter"/>

    <!--
        App name
        Text color signifies if it's white or blacklisted
    -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="App name"
        android:id="@+id/tv_appname"
        android:layout_weight="1" />

    <!--(i) button for info, popup dialog. Options to blacklist or whitelist-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ic_info"
        android:clickable="true"
        android:src="@drawable/ic_action_info"
        android:background="@drawable/selectable_regular"
        android:contentDescription="Info"/>

